{
    "compilerOptions": {
      "target": "es2016",                                 
      "experimentalDecorators": true,                  
      "module": "commonjs",                               
      // "rootDir": "./src",                                 
      "outDir": "./dist",                                  
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,           
      "strict": false,                                     
      "strictPropertyInitialization": false,            
      "noUnusedLocals": false,                          
      "noUnusedParameters": true,                          
      "skipLibCheck": true,
    }
  }
  